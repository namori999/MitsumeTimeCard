<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".calendar.CalenderFragment"
    android:id="@+id/fragment_calendar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="60dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:cardCornerRadius="0dp"
            android:layout_gravity="top"
            android:layout_marginRight="60dp"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:paddingBottom="20dp"
                android:background="@color/Yellow"
                />

            <LinearLayout
                android:id="@+id/currentDakoku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:paddingTop="50dp"
                android:visibility="visible"
                android:layout_gravity="top"
                android:paddingBottom="50dp"
                >

                <TextView
                    android:id="@+id/dateTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="20xx-xx-xx"
                    android:paddingBottom="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                   />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="right"
                   android:layout_marginBottom="20dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/shukkinTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:gravity="center"
                    android:text="出勤："
                    android:textSize="30px"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/taiknTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:gravity="center"
                    android:text="退勤："
                    android:textSize="30px"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/kyukeiTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:gravity="center"
                    android:textSize="30px"
                    android:text="休憩：" />



            </LinearLayout>

            <ImageView
                android:id="@+id/editBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/maru"
                android:backgroundTint="@color/Gray"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:src="@drawable/ic_baseline_edit_24"
                app:tint="@color/white" />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorAccent"
                android:padding="14dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yearText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:textColor="@color/white"
                        android:textSize="32dp"
                        android:textStyle="bold"
                        tools:text="2019" />

                    <TextView
                        android:id="@+id/monthText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:paddingRight="20dp"
                        android:textColor="@color/white"
                        android:textSize="32dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints"
                        tools:text="October" />

                </LinearLayout>


                <include
                    android:layout_height="wrap_content"
                    android:id="@+id/legendLayout"
                    layout="@layout/calendar_day_legend"
                    />


            </LinearLayout>




            <com.kizitonwose.calendarview.CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                app:cv_dayViewResource="@layout/calendar_day_layout"
                app:cv_monthHeaderResource="@layout/calendar_month_header_layout"
                android:background="@color/white"
                />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>